<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.victor.outbounddirect.ui.viewmodel.OutboundScanViewModel" />

        <import type="android.view.View" />

        <import type="me.goldze.mvvmhabit.binding.viewadapter.recyclerview.LayoutManagers" />

        <import type="me.goldze.mvvmhabit.binding.viewadapter.recyclerview.LineManagers" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/base_view_top_title"
            binding:baseTitleViewModel="@{viewModel.mBaseTitleViewModel}" />

        <LinearLayout
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F8F9F9"
            android:orientation="vertical">

            <com.lihang.ShadowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20mm"
                android:layout_marginTop="20mm"
                android:layout_marginEnd="20mm"
                binding:hl_cornerRadius="8mm"
                binding:hl_shadowColor="@color/color_797979"
                binding:hl_shadowLimit="6mm">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="30mm">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="16mm">

                        <ImageView
                            android:layout_width="34mm"
                            android:layout_height="34mm"
                            android:layout_marginEnd="12mm"
                            android:src="@mipmap/ic_pd_theme" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/workbench_outbound_list_content_title2_text"
                            android:textColor="@color/color_797979"
                            android:textSize="38mm" />

                        <TextView
                            android:layout_width="0mm"
                            android:layout_height="90mm"
                            android:layout_weight="1"
                            android:background="@drawable/shape_input_radius"
                            android:gravity="center_vertical"
                            android:hint="@string/workbench_outbound_select_type2_hint_text"
                            android:paddingStart="32mm"
                            android:paddingEnd="32mm"
                            android:text="@{viewModel.category.categoryName}"
                            android:textColor="@color/color_565656"
                            android:textColorHint="@color/color_9C9C9C"
                            android:textSize="38mm"
                            binding:onClickCommand="@{viewModel.selectTypeClickCommand}" />
                    </LinearLayout>
                </LinearLayout>
            </com.lihang.ShadowLayout>

            <com.lihang.ShadowLayout
                android:layout_width="match_parent"
                android:layout_height="0mm"
                android:layout_marginStart="20mm"
                android:layout_marginTop="20mm"
                android:layout_marginEnd="20mm"
                android:layout_marginBottom="20mm"
                android:layout_weight="1"
                binding:hl_cornerRadius="8mm"
                binding:hl_shadowColor="@color/color_797979"
                binding:hl_shadowLimit="6mm">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:overScrollMode="never"
                    android:scrollbars="none"
                    android:visibility="@{viewModel.noDataVisibleObservable == View.GONE ? View.VISIBLE : View.GONE}"
                    binding:itemBinding="@{viewModel.outboundScanItemBinding}"
                    binding:items="@{viewModel.outboundScanList}"
                    binding:layoutManager="@{LayoutManagers.linear()}"
                    binding:lineManager="@{LineManagers.horizontal()}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.noDataVisibleObservable}">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/bga_refresh_mt_change_to_release_refresh_04" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10mm"
                        android:text="@string/workbench_outbound_add_scan_hint_text"
                        android:textColor="@color/color_9C9C9C"
                        android:textSize="36mm" />
                </LinearLayout>
            </com.lihang.ShadowLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32mm"
                android:layout_marginEnd="32mm"
                android:layout_marginBottom="32mm"
                android:background="@drawable/selector_finish_btn"
                android:enabled="@{viewModel.btnVisiable}"
                android:gravity="center"
                android:paddingStart="60mm"
                android:paddingTop="32mm"
                android:paddingEnd="60mm"
                android:paddingBottom="32mm"
                android:text="@string/workbench_outbound_scan_finish_text"
                android:textColor="@color/white"
                android:textSize="38mm"
                binding:onClickCommand="@{viewModel.pdFinishClickCommand}" />
        </LinearLayout>
    </LinearLayout>
</layout>