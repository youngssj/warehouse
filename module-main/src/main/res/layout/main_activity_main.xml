<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.victor.main.ui.viewmodel.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="118dp"
            android:background="@mipmap/main_top_bg"
            android:paddingStart="10dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{viewModel.appVersion}'
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="你好"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvAppNameEN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="24dp"
                android:text="@string/login_top_text_en"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/tvAppNameEN"
                android:layout_centerHorizontal="true"
                android:text="@string/login_top_text"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </RelativeLayout>

        <me.goldze.mvvmhabit.widget.XViewPager
            android:id="@+id/mViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioGroup
            android:id="@+id/rgTabbar"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="28dp"
            android:background="@color/white"
            android:orientation="horizontal"
            binding:onCheckedChangedCommand="@{viewModel.onCheckedChangedCommand}">

            <RadioButton
                android:id="@+id/rbHome"
                style="@style/radioStyle"
                android:checked="true"
                android:text="@string/main_tab_home_text" />

            <RadioButton
                android:id="@+id/rbWorkBench"
                style="@style/radioStyle"
                android:layout_marginStart="6dp"
                android:text="@string/main_tab_workbench_text" />

            <RadioButton
                android:id="@+id/rbMine"
                style="@style/radioStyle"
                android:layout_marginStart="6dp"
                android:text="@string/main_tab_mine_text" />
        </RadioGroup>
    </LinearLayout>
</layout>