<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_login_edit"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="32mm">

    <ImageView
        android:id="@+id/ivStartIcon"
        android:layout_width="44mm"
        android:layout_height="44mm"
        android:src="@mipmap/login_icon_username" />

    <View
        android:id="@+id/viewLine"
        android:layout_width="1mm"
        android:layout_height="44mm"
        android:layout_marginStart="34mm"
        android:background="@color/color_F2F2F2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editText"
            android:layout_width="0mm"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:inputType=""
            android:maxLength="20"
            android:maxLines="1"
            android:paddingStart="34mm"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_9C9C9C"
            android:textCursorDrawable="@drawable/shape_edittext_cursor"
            android:textSize="40mm" />

        <ImageView
            android:id="@+id/ivClear"
            android:layout_width="80mm"
            android:layout_height="match_parent"
            android:padding="20mm"
            android:src="@mipmap/clean_edit" />
    </LinearLayout>
</LinearLayout>